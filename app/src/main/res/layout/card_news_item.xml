<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/Card"
    card_view:cardBackgroundColor="@color/colorCardBackground"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        style="@style/LargeRootView"
        android:padding="@dimen/dimen_s">

        <TextView
            android:id="@+id/news_item_section_text_view"
            style="@style/NewsItemSection" />

        <TextView
            android:id="@+id/news_item_title_text_view"
            style="@style/NewsItemTitle" />

        <View
            android:id="@+id/news_card_separator"
            style="@style/NewsItemSeparator" />

        <TextView
            android:id="@+id/news_item_author_text_view"
            style="@style/NewsItemPostInfo.Author" />

        <TextView
            android:id="@+id/news_item_date_text_view"
            style="@style/NewsItemPostInfo.Date" />

    </RelativeLayout>

</android.support.v7.widget.CardView>