<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/Card"
    card_view:cardBackgroundColor="@color/colorCardBackground"
    card_view:cardCornerRadius="@dimen/card_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout style="@style/LargeRootView">

        <TextView
            android:id="@+id/news_item_section"
            android:background="@color/colorCardBackgroundHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_section"
            android:textAppearance="?android:textAppearanceMedium" />

        <View
            android:id="@+id/news_card_separator"
            android:background="@color/colorCardBackgroundHeader"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/news_item_title"/>

        <TextView
            android:id="@+id/news_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_card_separator"
            android:textAppearance="?android:textAppearanceSmall"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/news_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_author"
            android:textAppearance="?android:textAppearanceSmall"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>