<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LargeRootView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AdaptableRootView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RecyclerView" parent="LargeRootView">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="NewsSearchProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NewsSearchEmptyImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/empty_view_image_view_height</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NewsSearchEmptyView" parent="AdaptableRootView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_below">@id/empty_view_image_view</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RetryButton" parent="AdaptableRootView">
        <item name="android:layout_below">@id/empty_view_text_view</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_m</item>
        <item name="android:background">@drawable/bgd_accent_selector</item>
        <item name="android:text">@string/no_internet_connection_button_text</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NewsItemSection">
        <item name="android:background">@drawable/bgd_accent_selector</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="NewsItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/news_item_section_text_view</item>
        <item name="android:paddingTop">@dimen/dimen_s</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="NewsItemSeparator">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_s</item>
        <item name="android:layout_marginBottom">@dimen/dimen_s</item>
        <item name="android:layout_below">@id/news_item_title_text_view</item>
    </style>

    <style name="NewsItemPostInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/news_card_separator</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NewsItemPostInfo.Author">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="NewsItemPostInfo.Date">
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
